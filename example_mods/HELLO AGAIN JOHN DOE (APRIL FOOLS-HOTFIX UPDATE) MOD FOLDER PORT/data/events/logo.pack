import Date;

function onEvent(e)
    if (e.event.name == 'logo') {
		var logoImg = Paths.getPath("songs/"+curSong+"/logo.png");
		if (!Assets.exists(logoImg)) logoImg = Paths.image("menu/rolbox/logoHolder");
		var logo = new FlxSprite().loadGraphic(logoImg);
		logo.alpha = 0;
		logo.scale.set(0.8,0.8);
		logo.updateHitbox();
		logo.screenCenter();
		logo.scrollFactor.set();
		logo.camera = camHUD;
		add(logo);
	
		final time = Std.parseFloat(e.event.params[0]);

		final delay = Std.parseFloat(e.event.params[1]);
		new FlxTimer().start(delay,()->{
			FlxTween.tween(logo,{alpha: 1},time,{ease:FlxEase.expoOut, onComplete: Void->{
				new FlxTimer().start(1.2,()->FlxTween.tween(logo, {alpha: 0},time, {ease: FlxEase.cubeOut}));
			}});
			FlxTween.tween(logo, {'scale.x': 1.1, 'scale.y': 1.1},time*2,{ease: FlxEase.quadInOut, startDelay: time/2, onComplete: Void->{remove(logo);logo.destroy();}});
		});

		// funny
		if (scaryMode) {
			logo.color = 0xFFFF1111;
			var scary = new FlxText();
			scary.font = Paths.font("ARIAL.TTF");
			scary.text = "scary";
			scary.scale.set(3, 2);
			scary.size = 20;
			scary.updateHitbox();
			scary.setPosition(logo.x, logo.y + logo.height - 50);
			if (downscroll) scary.y = FlxG.height - scary.y - scary.height;
			scary.camera = camHUD;
			new FlxTimer().start(delay+0.3, ()-> {
				add(scary);
				new FlxTimer().start(time*2-0.3, ()->{
					remove(scary.destroy());
				});
			});
		}
	}

